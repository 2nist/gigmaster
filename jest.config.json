{
  "testEnvironment": "jsdom",
  "roots": [
    "<rootDir>/src"
  ],
  "testMatch": [
    "**/__tests__/**/*.js",
    "**/?(*.)+(spec|test).js"
  ],
  "moduleNameMapper": {
    "\\.(css|less|scss|sass)$": "identity-obj-proxy",
    "^tone$": "<rootDir>/__mocks__/tone.js",
    "^phaser3spectorjs$": "<rootDir>/__mocks__/phaser3spectorjs.js"
  },
  "transform": {
    "^.+\\.(js|jsx)$": "babel-jest"
  },
  "setupFilesAfterEnv": [
    "<rootDir>/src/setupTests.js"
  ],
  "collectCoverageFrom": [
    "src/**/*.{js,jsx}",
    "!src/main.jsx",
    "!src/**/*.test.{js,jsx}",
    "!src/**/__tests__/**"
  ]
}
